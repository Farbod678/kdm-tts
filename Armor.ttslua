local Assert = require("Kdm/Util/Assert")
local Log = require("Kdm/Util/Log").ForPackage("Armor")

local Armor = {
    armorStats = {}
}

---------------------------------------------------------------------------------------------------

function Armor.RegisterArmorStats(armorStats)
    for armor, stats in pairs(armorStats or {}) do
        Assert(Armor.armorStats[armor] == nil, "Armor %s is already registered", armor)
        Armor.armorStats[armor] = stats
    end
end

---------------------------------------------------------------------------------------------------

function Armor.GetStats(armor)
    return Armor.armorStats[armor]
end

---------------------------------------------------------------------------------------------------

return Armor
