-- in showdown board local coordinates
local gridLeft     =    4.885550
local gridRight    = -4.436194
local gridTop        = -2.834642
local gridBottom =    3.801133

local cellWidth    = math.abs(gridRight - gridLeft) / 21
local cellHeight = math.abs(gridBottom - gridTop) / 15

local size = { x = cellWidth, y = cellWidth,    z = cellHeight }
for col = 1, 22 do
    for row = 1, 16 do
        local x = gridLeft - ((col - 1) * cellWidth)
        local xHalf = x - (cellWidth / 2)
        local z = gridTop + ((row - 1) * cellHeight)
        local zHalf = z + (cellHeight / 2)
        ScriptData.locations[string.format("(%d, %d)", col, row)] = {
            position = { x = x, y = 10.861341, z = z},
            size = size,
            board = "Showdown Board",
        }
        ScriptData.locations[string.format("(%d, %d.5)", col, row)] = {
            position = { x = x, y = 10.861341, z = zHalf},
            size = size,
            board = "Showdown Board",
        }
        ScriptData.locations[string.format("(%d.5, %d)", col, row)] = {
            position = { x = xHalf, y = 10.861341, z = z},
            size = size,
            board = "Showdown Board",
        }
        ScriptData.locations[string.format("(%d.5, %d.5)", col, row)] = {
            position = { x = xHalf, y = 10.861341, z = zHalf},
            size = size,
            board = "Showdown Board",
        }
    end
end

local topLeft = ScriptData.locations["Gear_1_1"].position
local bottomRight = ScriptData.locations["Gear_10_2"].position
local dx = (bottomRight.x - topLeft.x) / 9
local dz = (bottomRight.z - topLeft.z)
for col = 1, 10 do
    local x = topLeft.x + (col - 1) * dx
    for row = 1, 10 do
        local z = topLeft.z + (row - 1) * dz
        ScriptData.locations[string.format("Gear_%d_%d", col, row)] = {
            position = { x = x, y = topLeft.y, z = z },
            size = ScriptData.gearSize,
            board = "Settlement Board",
        }
    end
end

