        ScriptData.locations[string.format("SettlementLocation_%d_%d", col, row)] = {
            position = { x = x, y = topLeft.y, z = z },
            size = ScriptData.slocSize,
            board = "Settlement Board",
        }
    end
end

---------------------------------------------------------------------------------------------------

return ScriptData
