    Settlement.addTimelineEvent.resultTexts = {}
    for i = 1, 5 do
        local y = (246 + 150) - (i * 30)
        local x = 13+3
        Settlement.addTimelineEvent.resultButtons[i] = Ui.InvisibleButton(timelineEventPanel, { id = "SearchResult"..i, x = x, y = y, width = 350-6, height = 30, active = false, onClick = function()
            local data = Settlement.addTimelineEvent
            Settlement.AddTimelineEvent(data.year, data.event, data.results[i])
            Settlement.CloseAddTimelineEventPanel()
        end })
        x = x + 2   -- 2 padding
        Settlement.addTimelineEvent.resultIcons[i] = Ui.Image(timelineEventPanel, { id = "SearchResult"..i, rectAlignment = "LowerLeft", x = x, y = y+5, width = 24, height = 20, active = false })
        x = x + 24 + 3  -- 3 padding
        Settlement.addTimelineEvent.resultTexts[i] = Ui.LightText(timelineEventPanel, { id = "SearchResult"..i, x = x, y = y, width = 350-6-24-6, height = 30, fontSize = 14, active = false })
    end

    Settlement.addTimelineEvent.customNameText = Ui.LightInput(timelineEventPanel, { id = "CustomName", x = 13+3, y = 108, width = 350-6, height = 30, placeholder = "enter event name...", onValueChanged = function(value)
        Log.Debugf("Setting custom name to %s", value)
        Settlement.addTimelineEvent.customName = value
    end })

    Settlement.addTimelineEvent.typeOptions = Ui.OptionBoxGroup(timelineEventPanel, { id = "Type", onSelect = function(type)
        Log.Debugf("Selecting custom event type %s", type)
        Settlement.addTimelineEvent.type = type
    end })
    Settlement.addTimelineEvent.timelineEventOption = Ui.OptionBox(Settlement.addTimelineEvent.typeOptions, { x = 58, y = 68, width = 20, height = 20, checked = true, value = "TimelineEvent" })
    Settlement.addTimelineEvent.showdownOption = Ui.OptionBox(Settlement.addTimelineEvent.typeOptions, { x = 166, y = 68, width = 20, height = 20, value = "Showdown" })
    Settlement.addTimelineEvent.settlementEventOption = Ui.OptionBox(Settlement.addTimelineEvent.typeOptions, { x = 270, y = 68, width = 20, height = 20, value = "SettlementEvent" })

    Ui.InvisibleButton(timelineEventPanel, { id = "Add", x = 65, y = 13, width = 100, height = 30, onClick = function()
        local data = Settlement.addTimelineEvent
        if data.customName == nil or data.customName == "" then
            return Log.Broadcastf("Please enter the event's name.")
        end

        Settlement.AddTimelineEvent(data.year, data.event,  { name = data.customName, type = data.type, custom = true })
        Settlement.CloseAddTimelineEventPanel()
    end })
    Ui.InvisibleButton(timelineEventPanel, { id = "Cancel", x = 211, y = 13, width = 100, height = 30, onClick = Settlement.CloseAddTimelineEventPanel })
end

---------------------------------------------------------------------------------------------------

return Settlement
