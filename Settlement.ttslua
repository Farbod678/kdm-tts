function Settlement.SetMilestones(milestones)
    Settlement.milestones = {}
    for i, milestone in ipairs(milestones) do
        Log.Debugf("Setting milestone %i to %s/%s", i, milestone.name, milestone.event)
        Settlement.milestoneCheckboxes[i]:Show()
        Settlement.milestoneTexts[i]:Show()
        Settlement.milestoneTexts[i]:SetText(milestone.name)
        Settlement.milestoneEventButtons[i]:Show()
        Settlement.milestoneEventTexts[i]:Show()
        Settlement.milestoneEventTexts[i]:SetText(milestone.event)

        Settlement.milestones[i] = {
            name = milestone.name,
            event = milestone.event,
            checked = nil,
        }
    end
end

